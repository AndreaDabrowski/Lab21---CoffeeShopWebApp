    ViewBag.Title = "Register";
}
<h1>Registration Page</h1>
<h3>Sign up below:</h3>
<form action="/Home/AddUser" onsubmit="return JSValidate()" method="post" id="Form">
    <!--experiment with get and post-->
    <label class="control-label">
        <input type="text" name="FirstName" id="FirstName" class="form-control" placeholder="First Name" pattern="^[a-ZA-Z][1,]$" title="Error Message! You dont need this!" />
    </label> <br />
    <label class="control-label">
        <input type="text" name="LastName" id="LastName" class="form-control" placeholder="Last Name" onsubmit="ValidateLastName()"/>
    </label> <br />
    <label class="control-label">
        <input type="email" name="Email" id="Email" class="form-control" placeholder="Email" onkeyup="check_match2()"/>
    </label> <br />
    <label class="control-label">
        <input type="email" name="ConfirmEmail" id="ConfirmEmail" class="form-control" placeholder="Confirm Email" onkeyup="check_match2()"/>
        <span id="message2"></span>
    </label> <br />
    <label class="control-label">
        Birthdate:
        <input type="date" name="Birthdate" id="Birthdate" class="form-control" />
    </label> <br />
    <label class="control-label">
        <input type="tel" name="PhoneNumber" id="PhoneNumber" class="form-control" placeholder="Phone Number" />
    </label> <br />
    <label class="control-label">
        <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" onkeyup="check_match()" />
    </label> <br />
    <label class="control-label">
        <input type="password" name="PasswordConfirm" id="PasswordConfirm" class="form-control" placeholder ="Confirm Password"onkeyup="check_match()"/>
        <span id="message"></span>
    </label> <br />
    <br/>
    <fieldset>
        <section>
            <p>Excitement Meter:</p><span>Bummed</span><input type="range" name="Excitement" id="Excitement" class="form-control" /><span>Hyped</span>
        </section><legend>Non-Text Fieldsets</legend>@*none are connected to anything yet*@
        
        Sign up for promotions?<input type="checkbox" name="Promo" id="Promo" class="form-control" />
