
@{
    ViewBag.Title = "Register";
}

<h1>Registration Page</h1>
<h3>Sign up below:</h3>
<form action="/Home/AddUser" method="post">
    <label class="control-label">First Name: </label> <input type="text" name="FirstName" class="form-control" />
    <label class="control-label">Last Name: </label> <input type="text" name="LastName" class="form-control" />
    <label class="control-label">Email: </label> <input type="text" name="Email" class="form-control" />
    <label class="control-label">Birthdate</label> <input type="date" name="Birthdate" class="form-control" />
    <label class="control-label">Phone Number: </label> <input type="number" name="PhoneNumber" class="form-control" />
    <label class="control-label">Password</label> <input type="text" name="Password" class="form-control" />
    <input type="submit" value="Register!" class="btn-default" />
</form>

