        <input type="radio" name="Cool" value="no"> No<br>
        <input type="radio" name="Cool" value="other"> Other
    </fieldset>

    <input type="submit" value="Register!" class="btn-default" id="RegisterButton"/> <!--you can also put JS() reference here-->



